    transparency = 0
    idle_threshold = 60
    monitor = 0
    follow = none
    sticky_history = no
    line_height = 30
    separator_height = 2;
    padding = 10
    horizontal_padding = 10
    separator_color = frame
    startup_notification = false
    dmenu = /usr/bin/rofi -dmenu -p 'dunst: '
