# vim:filetype=conf
[global]
    font = lucy tewi, Wuncon Siji 8
    format = "[%a] %s: %b"
    sort = yes
    indicate_hidden = yes
    alignment = center
    bounce_freq = 0
    show_age_threshold = 60
    word_wrap = yes
    ignore_newline = no
    geometry = "450x3+495-30"
    transparency = 0
    idle_threshold = 60
    monitor = 0
    follow = none
    sticky_history = no
    line_height = 30
    separator_height = 2;
    padding = 10
    horizontal_padding = 10
    separator_color = frame
    startup_notification = false
    dmenu = /usr/bin/rofi -dmenu -p 'dunst: '
    browser = /usr/bin/xdg-open
    frame_width = 5
    frame_color = "#383a42"

[shortcuts]
    close = mod4+n
    close_all = mod4+shift+n
    history = mod4+m
    context = mod4+shift+m

[urgency_low]
    background = "#f0f0f1"
    foreground = "#a0a1a7"
    timeout = 10

[urgency_normal]
    background = "#e5e5e6"
    foreground = "#383a42"
    timeout = 10

[urgency_critical]
    background = "#ca1243"
    foreground = "#202227"
    timeout = 0

[wmtags]
    appname = "wmtags"
    format = "%b"
    timeout = 1

[wminfo]
    appname = "wminfobar"
    format = "%b"

[volume-unmute]
    appname = "ponymix"
    format = "Volume: %p"

[volume-mute]
    appname = "ponymix"
    icon = "notification-audio-volume-muted"
    format = "Volume: %p (Muted)"
