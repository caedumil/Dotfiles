!! Color Theme -------------------------------------------------------------- !!
#include ".config/Xres-base16/base16-yesterdaynight.dark.256.xresources"

!! Xcursor ------------------------------------------------------------------ !!
Xcursor.theme: Adwaita

!! Xft ---------------------------------------------------------------------- !!
Xft.antialias:                  true
Xft.rgba:                       rgb
Xft.hinting:                    true
Xft.hintstyle:                  hintfull
Xft.lcdfilter:                  lcdlight

!! UXTerm ------------------------------------------------------------------- !!
UXTerm*termName:                xterm-256color
UXTerm*font:                    -*-tewi-medium-*-normal-*-11-*-*-*-*-*-*-*
UXTerm*saveLines:               500

!! URxvt -------------------------------------------------------------------- !!
URxvt.geometry:                 100x30
URxvt.transparent:              false
URxvt.scrollBar:                false
URxvt.scrollBar_right:          false
URxvt.font:                     -*-tewi-medium-*-normal-*-11-*-*-*-*-*-*-*, -*-unifont-*-*-*-*-*-*-*-*-*-*-*-*
URxvt.boldFont:                 -*-tewi-bold-*-normal-*-11-*-*-*-*-*-*-*, -*-unifont-*-*-*-*-*-*-*-*-*-*-*-*
URxvt.letterSpace:              0
URxvt.saveLines:                500
URxvt.fading:                   25
!extensions
URxvt.perl-ext-common:          default,url-select,keyboard-select,clipboard
!perls -- url-select
URxvt.keysym.M-u:               perl:url-select:select_next
URxvt.url-select.launcher:      /usr/bin/xdg-open
URxvt.url-select.underline:     true
!perls -- keyboard-select
URxvt.keysym.M-s:               perl:keyboard-select:activate
!perls -- clipboard
URxvt.keysym.M-c:               perl:clipboard:copy
URxvt.keysym.M-v:               perl:clipboard:paste
URxvt.clipboard.copycmd:        xclip -i -selection clipboard
URxvt.clipboard.pastecmd:       xclip -o -selection clipboard

!! Dzen --------------------------------------------------------------------- !!
dzen2.font:                     -*-lime-medium-*-normal-*-10-*-*-*-*-*-*-*
dzen2.background:               base00
dzen2.foreground:               base05

!! Dmenu2
dmenu.font:                     -*-lime-medium-*-normal-*-10-*-*-*-*-*-*-*
dmenu.background:               base00
dmenu.foreground:               base05
dmenu.selbackground:            base05
dmenu.selforeground:            base00

!! Rofi --------------------------------------------------------------------- !!
rofi.hide-scrollbar:            true
rofi.font:                      lime 8
rofi.terminal:                  urxvtc
rofi.color-enabled:             false
rofi.color-normal:              base00,base05,base00,base05,base00
rofi.color-urgent:              base00,base08,base00,base08,base00
rofi.color-active:              base00,base0C,base00,base0C,base00
rofi.color-window:              base00,base05
rofi.bc:                        base05
rofi.bg:                        base00
rofi.fg:                        base05
rofi.bgalt:                     base00
rofi.hlbg:                      base05
rofi.hlfg:                      base00
rofi.bg-urgent:                 base00
rofi.fg-urgent:                 base08
rofi.hlbg-urgent:               base08
rofi.hlfg-urgent:               base00
rofi.bg-active:                 base00
rofi.fg-active:                 base0C
rofi.hlbg-active:               base0C
rofi.hlfg-active:               base00
