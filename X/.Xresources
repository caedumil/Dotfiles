!! Color Theme -------------------------------------------------------------- !!
#include ".config/Xres-colors/base16-harmonic-light-256.Xresources"

!! Xcursor ------------------------------------------------------------------ !!
Xcursor.theme: Adwaita

!! Xft ---------------------------------------------------------------------- !!
Xft.antialias:                  true
Xft.rgba:                       rgb
Xft.hinting:                    true
Xft.hintstyle:                  hintfull
Xft.lcdfilter:                  lcdlight

!! URxvt -------------------------------------------------------------------- !!
URxvt.geometry:                 100x30
URxvt.transparent:              false
URxvt.scrollBar:                false
URxvt.scrollBar_right:          false
URxvt.font:                     -*-tewi-medium-*-normal-*-11-*-*-*-*-*-*-*, -*-unifont-*-*-*-*-*-*-*-*-*-*-*-*
URxvt.boldFont:                 -*-tewi-bold-*-normal-*-11-*-*-*-*-*-*-*, -*-unifont-*-*-*-*-*-*-*-*-*-*-*-*
URxvt.letterSpace:              0
URxvt.saveLines:                500
URxvt.fading:                   5
!extensions
URxvt.perl-ext-common:          default,url-select,keyboard-select,clipboard
!perls -- url-select
URxvt.keysym.M-u:               perl:url-select:select_next
URxvt.url-select.launcher:      /usr/bin/xdg-open
URxvt.url-select.underline:     true
!perls -- keyboard-select
URxvt.keysym.M-s:               perl:keyboard-select:activate
!perls -- clipboard
URxvt.keysym.M-c:               perl:clipboard:copy
URxvt.keysym.M-v:               perl:clipboard:paste
URxvt.clipboard.copycmd:        xsel -bi
URxvt.clipboard.pastecmd:       xsel -bo

!! Dzen --------------------------------------------------------------------- !!
dzen2.font:                     -*-lime-medium-*-normal-*-10-*-*-*-*-*-*-*
dzen2.background:               base00
dzen2.foreground:               base05

!! Dmenu2
dmenu.font:                     -*-lime-medium-*-normal-*-10-*-*-*-*-*-*-*
dmenu.background:               base07
dmenu.foreground:               base05
dmenu.selbackground:            base05
dmenu.selforeground:            base00

!! Rofi --------------------------------------------------------------------- !!
rofi.hide-scrollbar:            true
rofi.font:                      artwiz lime 8
rofi.terminal:                  urxvtc
rofi.color-enabled:             true
rofi.color-normal:              base00,base05,base00,base05,base00
rofi.color-urgent:              base00,base08,base00,base08,base00
rofi.color-active:              base00,base0D,base00,base0D,base00
rofi.color-window:              base00,base05
