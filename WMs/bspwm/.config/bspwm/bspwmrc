#! /bin/bash

# hotkeys
sxhkd &

# tags/workspaces/desktops
bspc monitor --reset-desktops 000 001 010 011 100 101

# border & gap
bspc config border_width            5
bspc config window_gap              10

# layout
bspc config split_ratio             0.5
bspc config borderless_monocle      false
bspc config gapless_monocle         false

# color theme
bspc config normal_border_color     "#$(getXresColor.sh color8)"
bspc config focused_border_color    "#$(getXresColor.sh color15)"
bspc config active_border_color     "#$(getXresColor.sh color7)"
bspc config presel_feedback_color   "#$(getXresColor.sh color0)"

# rules
bspc rule --add Opera desktop='^1'
bspc rule --add firefox desktop='^1'
bspc rule --add Chromium desktop='^1'

bspc rule --add firefox:Places state=floating
bspc rule --add firefox:firefox state=floating

bspc rule --add Pinentry-gtk2 state=floating
bspc rule --add Gimp state=floating
bspc rule --add mpv state=floating
bspc rule --add feh state=floating

# desktop layout
bspc desktop 000 --layout monocle

# tags
pgrep --full tags.py >/dev/null 2>&1 && pkill --full tags.py
$HOME/.config/bspwm/tags.py &

# wallpaper
command -v feh >/dev/null 2>&1 && $HOME/.fehbg

# compositor
pgrep compton >/dev/null 2>&1 && pkill compton
command -v compton >/dev/null 2>&1 && compton --daemon
