#!/bin/sh
# Config
bspc config border_width        2
bspc config window_gap         12

bspc config focused_border_color    "#$(getXresColor foreground)"
bspc config normal_border_color     "#$(getXresColor background)"
bspc config presel_border_color     "#$(getXresColor color15)"

bspc config split_ratio         0.50
bspc config borderless_monocle  true
bspc config gapless_monocle     true
bspc config focus_by_distance   true

# Workspaces
bspc monitor -d I II III IV V VI VII

# Rules
bspc rule -a Firefox desktop=^1
bspc rule -a libreoffice desktop=^4 follow=on

bspc rule -a feh floating=on
bspc rule -a mpv floating=on
bspc rule -a zathura floating=on

bspc rule -a Gimp-2.8 desktop=^5 follow=on floating=on

# Composite Manager
compton -b -i 0.9

# Status Bar
~/.config/bspwm/panel &

# Startup
#urxvtd -q -o -f
dunst &
~/.fehbg
