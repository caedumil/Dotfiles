#!/bin/bash
# vim: set tw=90:

SEP="#FF$(getXresColor color3)"
URG="#FF$(getXrexColor color1)"

while read -r line; do
    case ${line} in
        C*) #clock output
            clock="${line#?}"
            ;;
        S*) #system information
            sys_info="${line#?}"
            ;;
        W*) #bspwm internal state
            wm_infos=""
            IFS=":"
            set -- ${line#?}
            while [ $# -gt 0 ]; do
                item=${1}
                name=${item#?}
                case $item in
                    [OFU]*) wm_infos+="%{R}%{U${SEP}}%{+u} ${name} %{-u}%{U-}%{R}" ;;
                    u*) wm_infos+="%{R}%{U${URG}}%{+u} ${name} %{-u}%{U-}%{R}" ;;
                    o*) wm_infos+="%{R} ${name} %{R}" ;;
                    f*) ;;
                esac
                shift
            done
            ;;
        esac
    printf "%b %b %b\n" \
        "%{l}${clock}" \
        "%{c}%{F${SEP}}::%{F-}  ${wm_infos}  %{F${SEP}}::%{F-}" \
        "%{r}${sys_info}"
done
