# i3 config file (v4)
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!
#
# This config file uses keycodes (bindsym) and was written for the QWERTY
# layout.
#
# To get a config file with the same key positions, but for your current
# layout, use the i3-config-wizard
#

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below. ISO 10646 = Unicode
#font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1

# The font above is very space-efficient, that is, it looks good, sharp and
# clear in small sizes. However, if you need a lot of unicode glyphs or
# right-to-left text rendering, you should instead use pango for rendering and
# chose a FreeType font, such as:
# font pango:DejaVu Sans Mono 10
font pango: Tamsyn, Icons 10px

# define some variables
set $m Mod4
set $term i3-sensible-terminal
set $lock slock

# workspace names
# 1:www, 2:term, 3:files, 4,office, 5:mail,
# 6:gimp, 7:games, 8:video, 9:r-desk, 10:other
set $ws1 1: 
set $ws2 2: 
set $ws3 3: 
set $ws4 4: 
set $ws5 5: 
set $ws6 6: 
set $ws7 7: 
set $ws8 8: 
set $ws9 9: 
set $ws10 10: 

# use Mouse+$m to drag floating windows to their wanted position
floating_modifier $m

# start a terminal
#bindsym $m+Return exec i3-sensible-terminal
bindsym $m+Return exec --no-startup-id x-terminal

# kill focused window
bindsym $m+Shift+q kill
bindsym $m+x kill

# start dmenu (a program launcher)
# There also is the (new) i3-dmenu-desktop which only displays applications
# shipping a .desktop file. It is a wrapper around dmenu, so you need that
# installed.
bindsym $m+d exec --no-startup-id i3-dmenu-desktop
bindsym $m+Shift+d exec --no-startup-id dmenu_run

# change focus
bindsym $m+j focus left
bindsym $m+k focus down
bindsym $m+l focus up
bindsym $m+semicolon focus right

# alternatively, you can use the cursor keys:
bindsym $m+Left focus left
bindsym $m+Down focus down
bindsym $m+Up focus up
bindsym $m+Right focus right

# move focused window
bindsym $m+Shift+j move left
bindsym $m+Shift+k move down
bindsym $m+Shift+l move up
bindsym $m+Shift+semicolon move right

# alternatively, you can use the cursor keys:
bindsym $m+Shift+Left move left
bindsym $m+Shift+Down move down
bindsym $m+Shift+Up move up
bindsym $m+Shift+Right move right

# split in horizontal orientation
bindsym $m+h split h

# split in vertical orientation
bindsym $m+v split v

# enter fullscreen mode for the focused container
bindsym $m+f fullscreen

# change container layout (stacked, tabbed, toggle split)
bindsym $m+s layout stacking
bindsym $m+w layout tabbed
bindsym $m+e layout toggle split

# toggle tiling / floating
bindsym $m+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $m+space focus mode_toggle

# focus the parent container
bindsym $m+a focus parent

# focus the child container
#bindsym $m+d focus child

# switch to workspace
bindsym $m+1 workspace $ws1
bindsym $m+2 workspace $ws2
bindsym $m+3 workspace $ws3
bindsym $m+4 workspace $ws4
bindsym $m+5 workspace $ws5
bindsym $m+6 workspace $ws6
bindsym $m+7 workspace $ws7
bindsym $m+8 workspace $ws8
bindsym $m+9 workspace $ws9
bindsym $m+0 workspace $ws10

# move focused container to workspace
bindsym $m+Shift+1 move container to workspace $ws1
bindsym $m+Shift+2 move container to workspace $ws2
bindsym $m+Shift+3 move container to workspace $ws3
bindsym $m+Shift+4 move container to workspace $ws4
bindsym $m+Shift+5 move container to workspace $ws5
bindsym $m+Shift+6 move container to workspace $ws6
bindsym $m+Shift+7 move container to workspace $ws7
bindsym $m+Shift+8 move container to workspace $ws8
bindsym $m+Shift+9 move container to workspace $ws9
bindsym $m+Shift+0 move container to workspace $ws10

# reload the configuration file
bindsym $m+Shift+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $m+Shift+r restart

# exit i3 (logs you out of your X session)
#bindsym $m+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"
bindsym $m+Shift+e exit

# resize window (you can also use the mouse for that)
mode "resize" {
    # These bindings trigger as soon as you enter the resize mode

    # Pressing left will shrink the window’s width.
    # Pressing right will grow the window’s width.
    # Pressing up will shrink the window’s height.
    # Pressing down will grow the window’s height.
    bindsym j           resize shrink width 10 px or 10 ppt
    bindsym k           resize grow height 10 px or 10 ppt
    bindsym l           resize shrink height 10 px or 10 ppt
    bindsym semicolon   resize grow width 10 px or 10 ppt

    # same bindings, but for the arrow keys
    bindsym Left        resize shrink width 10 px or 10 ppt
    bindsym Down        resize grow height 10 px or 10 ppt
    bindsym Up          resize shrink height 10 px or 10 ppt
    bindsym Right       resize grow width 10 px or 10 ppt

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $m+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    colors{
        #                   border      backgr.     text
        focused_workspace   #333333     #ebebeb     #000000
        active_workspace    #333333     #999999     #000000
        inactive_workspace  #333333     #454545     #ffffff
        urgent_workspace    #333333     #c40c00     #ffffff
    }

    status_command i3status -c ~/.i3/i3status.conf

    tray_output none
    position top
}

#######################################################################
# Border Style
new_window 1pixel

# Colorclass                border      backgr.     text        indicator
client.focused              #ebebeb     #ebebeb     #000000     #333333
client.focused_inactive     #ebebeb     #454545     #ffffff     #333333
client.unfocused            #454545     #454545     #ffffff     #7e7e7e
client.urgent               #c40c00     #c40c00     #ffffff     #901000

# Monitor assigments
#workspace "$ws1" output LVDS
#workspace "$ws2" output VGA-0
#workspace "$ws3" output LVDS
#workspace "$ws4" output VGA-0
#workspace "$ws5" output VGA-0

# Workspace Assignments
assign [class="^Firefox$"]                              $ws1
assign [class="^Termite$" instance="^shell$"]           $ws2
assign [class="^Termite$" instance="^Ranger"]           $ws3
assign [class="office" instance="office"]               $ws4
assign [class="^Thunderbird$"]                          $ws5
assign [class="^Gimp-2.8$"]                             $ws6
assign [class="^mupen64plus$"]                          $ws7
assign [class="^openttd$"]                              $ws7
assign [class="^mpv$"]                                  $ws8

# Window modes
for_window [class="^mpv$"]                              focus
for_window [class="^feh$"]                              floating enable
for_window [class="^Zathura$"]                          floating enable
for_window [class="^xfreerdp$"]                         floating enable
for_window [class="^Display$" instance="^display$"]     floating enable
for_window [class="^mupen64plus$"]                      fullscreen
for_window [class="^Gimp-2.8$"]                         focus
for_window [class="^Termite$"]                          focus

# Startup applications
exec --no-startup-id dunst
exec --no-startup-id sh $HOME/.fehbg
exec --no-startup-id wdevmon

# Custom keybindings
#   Special Keys
bindsym XF86Launch1     exec --no-startup-id $term
bindsym XF86Mail        exec thunderbird
bindsym XF86WWW         exec firefox
bindsym XF86Launch2     exec --no-startup-id $term --name Ranger -e ranger
#   Fn Keys
bindsym XF86AudioRaiseVolume    exec --no-startup-id dvol --increase 4
bindsym XF86AudioMute           exec --no-startup-id dvol --toggle
bindsym XF86AudioLowerVolume    exec --no-startup-id dvol --decrease 4

bindsym XF86AudioPlay   exec --no-startup-id mpc -q toggle
bindsym XF86AudioStop   exec --no-startup-id mpc -q stop
bindsym XF86AudioPrev   exec --no-startup-id mpc -q prev
bindsym XF86AudioNext   exec --no-startup-id mpc -q next

bindsym XF86Display     exec --no-startup-id multihead_toggle
bindsym XF86Sleep       exec --no-startup-id systemctl suspend
bindsym XF86Battery     exec --no-startup-id systemctl hibernate
#   Shortcuts
bindsym F12             exec --no-startup-id calendar.sh
bindsym Pause           exec --no-startup-id disks -l all
bindsym $m+Pause        exec --no-startup-id devmon -s -r
bindsym $m+Print        exec --no-startup-id screenshot.sh
bindsym $m+F2           exec --no-startup-id $lock
